@model IEnumerable<Repository.Entities.OrderDetail>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="holder">
    <div class="container">
        <div class="page-title text-center">
            <h1 class="custom-color">Order Summary</h1>
        </div>
<div class="row">
    <div class="col-lg-11 col-xl-13">
       
        <button type="submit" class="btn btn--grey">
            <a asp-controller="Order" asp-action="Index">
                <span>Back to Order History</span>
            </a>
        </button>
                <div class="cart-table-prd">
                <table class="table table-data2">
                    <thead>
                        <tr>
                            <th>Book</th>
                            <th>Price</th>
                            <th>Title</th>
                            <th>Quanlity</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        { 
                            <tr class="tr-shadow">
                                <td>
                                    <div class="cart-table-prd-image">
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@item.Book.BookId">
                                                <img style="max-width: 100%; max-height:50%;" src="@item.Book.ImageLink" alt="@item.Book.Title" class="card-img-top" />
                                            </a>
                                    </div>
                                </td>
                                <td>
                                    <div class="price-new">@($"{item.Book.Price:C}")</div>
                                </td>
                                <td>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h4 style=" display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden; text-overflow: ellipsis;" class="card-title mb-3">@item.Book.Title</h4>
                                            </div>
                                        </div>
                                    </td>
                                <td>@item.Quantity</td>
                                <td>@($"{item.Book.Price * item.Quantity:C}")</td>
                            </tr>
                            <tr class="spacer"></tr>
                            
                        }
                    </tbody>
                </table>
                </div>
    </div>
    <div style="display: flex; justify-content: center; align-items: center; border: 2px solid black" class="col-lg-7 col-xl-5 mt-3 mt-md-0">
        <div class="card-total">
            <div class="row d-flex">
                <div class="col card-total-txt">Total:</div>
                <div class="col-auto card-total-price text-right">@($"{Model.Sum(c => c.Book.Price * c.Quantity):C}")</div>
            </div>
        </div>
    </div>
</div>
    </div>
</div>
