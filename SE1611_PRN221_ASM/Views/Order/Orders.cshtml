@model IEnumerable<Repository.Entities.Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content--bgf7">
    <!-- DATA TABLE-->
    <section class="p-t-20">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>OrderId</th>
                                    <th>Customer Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>status</th>
                                    <th>price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="tr-shadow">
                                        <td>
                                            @item.OrderId
                                        </td>
                                        <td>
                                            @item.CustomerId
                                        </td>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>
                                            <select value="@item.Status" id="selected">
                                                <option value="0" >Pending</option>
                                                <option value="1" >Deliveried</option>
                                            </select>
                                        </td>
                                        <td>@item.TotalAmount</td>
                                        <td>
                                            <div class="table-data-feature">
                                                <button class="item" data-toggle="tooltip" data-placement="top" title="More">
                                                <a asp-controller="Order" asp-action="Details" asp-route-id="@item.OrderId">
                                                    <i class="zmdi zmdi-more">
                                                    </i>
                                                </a>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="spacer"></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

