@model IEnumerable<Repository.Entities.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Cart</h1>

<table>
    <thead>
        <tr>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cart in Model)
        {
            <tr>
                <td>@cart.Book.Title</td>
                <td>@cart.Book.Price</td>
                <td>
                    <form method="post" action="@Url.Action("UpdateQuantity", "Cart", new { id = cart.CartId })">
                    @Html.AntiForgeryToken()
                    <input type="number" name="quantity" value="@cart.Quantity" />
                    <input type="submit" value="Update" />
                    </form>
                </td>
                <td>@(Math.Round((decimal)(cart.Book.Price * cart.Quantity), 2))</td>
            </tr>
        }
    </tbody>
</table>
