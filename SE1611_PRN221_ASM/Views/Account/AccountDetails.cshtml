@model Repository.Entities.Account;
@using SE1611_PRN221_ASM.Helper
@inject IHttpContextAccessor HttpContextAccessor

@{
    var session = HttpContextAccessor.HttpContext.Session;

    var userSession = session.GetObject<UserSession>("UserSession");

}
<div class="holder breadcrumbs-wrap mt-0">
    <div class="container">
        <ul class="breadcrumbs">
            <li><a href="index.html">Home</a></li>
            <li><span>My account</span></li>
        </ul>
    </div>
</div>
<div class="holder">
    <div class="container">
        <div class="row">
            <div class="col-md-4 aside aside--left">
                <div class="list-group">
                    <a href="account-details.html" class="list-group-item active">Account Details</a>
                    <a href="account-addresses.html" class="list-group-item">My Addresses</a>
                    <a href="account-wishlist.html" class="list-group-item">My Wishlist</a>
                    <a href="account-history.html" class="list-group-item">My Order History</a>
                    <a href="#" class="list-group-item disabled">My Reviews</a>
                    <a href="#" class="list-group-item disabled">My Saved Tags</a>
                    <a href="#" class="list-group-item disabled">Compare Products</a>
                </div>
            </div>
            <div class="col-md-14 aside">
                <h1 class="mb-3">Account Details</h1>
                <div class="row vert-margin">
                    <div class="col-sm-9">
                        <div class="card">
                            <div class="card-body">
                                <h3>Personal Info</h3>
                                <p>
                                    <b>Full Name:</b>@Model.Customer!.Name<br>
                                    <b>E-mail:</b> @Model.Email<br>
                                    <b>Birthday:</b>@Model.Customer.Birthday?.ToString("MM/dd/yyyy")
                                </p>
                                <div class="mt-2 clearfix">
                                    <a href="#" class="link-icn js-show-form" data-form="#updateDetails"><i class="icon-pencil"></i>Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3 d-none" id="updateDetails">
                    <form asp-action="update" method="post">
                        <div class="card-body">
                            <h3>Update Account Details</h3>

                            <div class="row mt-2">
                                <div class="col-sm-9">
                                    <label class="text-uppercase">Full Name:</label>
                                    <div class="form-group">
                                        <input asp-for="Customer!.Name" type="text" class="form-control form-control--sm" placeholder="Full Name" value="@Model.Customer!.Name">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mt-2">
                                <div class="col-sm-9">
                                    <label class="text-uppercase">E-mail:</label>
                                    <div class="form-group">
                                        <input asp-for="Email" type="email" class="form-control form-control--sm" placeholder="Email" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <label class="text-uppercase">Date Of Birth:</label>
                                    <div class="form-group">
                                        @*@Html.TextBoxFor(m => m.Customer!.Birthday, "{0:MM/dd/yyyy}", new { type = "date", @class = "form-control " })*@
                                        @Html.TextBoxFor(m => m.Customer.Birthday, "{0:MM/dd/yyyy}", new { type = "date", @class = "form-control datepicker", value = Model.Customer.Birthday.HasValue ? Model.Customer.Birthday?.ToString("MM-dd-yyyy") : "" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-2">
                            <button type="reset" class="btn btn--alt btn--grey js-close-form" data-form="#updateDetails">Cancel</button>
                            <button type="submit" class="btn ml-1">Update</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>

    </div>
</div>
